<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@color/un_active</item>
    </style>

    <style name="options_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/ripple</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="table_numbers">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/table_stroke</item>
        <item name="android:fontFamily">@font/montserrat_alternates_medium</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center|center_vertical</item>
    </style>

    <style name="table_times" parent="table_numbers">
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/table_cheslitel</item>
        <item name="android:fontFamily">@font/montserrat_alternates_light</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="vertical_conteiner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/table_stroke</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="table_para">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_alternates_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="table_number">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_alternates_medium</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="table_time">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_alternates_light</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">10sp</item>
    </style>
</resources>